# Application Configuration
APP_NAME=DataQuarantine
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP_ID=dataquarantine-validators
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_MAX_POLL_RECORDS=500

# Kafka Topics
KAFKA_RAW_TOPIC=raw-events
KAFKA_VALID_TOPIC=validated-events
KAFKA_DLQ_TOPIC=quarantine-dlq

# Database Configuration
DATABASE_URL=postgresql://quarantine_user:quarantine_pass@localhost:5432/dataquarantine
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=data-quarantine
MINIO_SECURE=false

# Redis Configuration (for metrics and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Monitoring
PROMETHEUS_PORT=8081
METRICS_ENABLED=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# Schema Configuration
SCHEMA_DIRECTORY=./schemas
SCHEMA_CACHE_TTL=300

# Quarantine Configuration
QUARANTINE_ENABLED=true
QUARANTINE_RETENTION_DAYS=30
QUARANTINE_AUTO_DELETE=true
QUARANTINE_BATCH_SIZE=100

# Validation Configuration
VALIDATION_TIMEOUT_SECONDS=5
VALIDATION_MAX_RETRIES=3
ENABLE_AUTO_REMEDIATION=true

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_RECIPIENTS=
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=
ALERT_THRESHOLD_PER_HOUR=100

# Performance Tuning
MAX_CONCURRENT_VALIDATIONS=100
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=50
BATCH_TIMEOUT_MS=1000
